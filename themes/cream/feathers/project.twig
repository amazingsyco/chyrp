{% extends "content/post.twig" %}

{% block content %}
	<a class="invisible-slug" name="$post.slug">&nbsp;</a>
	<div class="postHeader">
		<span class="postDate"><h2><a href="$post.url">${ post.created_at | strftime("%m|%d" | translate) }</a></h2></span>
		{% if post['title'] %}
			<h1><a href="$post.source" rel="bookmark" title="${ "Project Page for" | translate } &quot;$post.title&quot;">$post.title</a></h1>
		{% endif %}
	</div>
    
    <p>${ post.body | read_more }</p>
	<div class="projectStatus">
		<strong>Status:</strong>
		${ post.project_status}
	</div>
{% endblock %}
