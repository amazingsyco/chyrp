					<a href="{% url "feed" %}" class="rss"></a>
					<a href="https://twitter.com/Dubstepza" class="twitter"></a>
					<span class="search" id="searchButton"></span>
				</span>
				<div id="searchbar">
					<form action="$site.url" method="get" accept-charset="utf-8">
						<input type="hidden" name="action" value="search" id="action" />
						<input type="text" id="searchTextField" name="query" value="${ GET.query | escape }">
					</form>
					<div id="searchbar-hide"></div>
				</div>
			</div>
			<div id="content">
{% for type, messages in flash.all | items %}
	{% for message in messages %}
		<div class="message">
		$message
		</div>
	{% endfor %}
{% endfor %}
				<div id="pageBody">
					<div id="posts">
{% block content %}
{% endblock %}
					</div>
{% if posts.paginated and posts.pages > 1 %}
<div class="pages">
	&nbsp;
	{% if posts.page > 1 %}<a class="left prev_post"  href="$posts.prev_page_url">&larr; Newer</a>{% endif %}
	${ "Page %d of %d" | translate | format(posts.page, posts.pages) }
	{% if posts.page < posts.pages %}<a class="right next_post" href="$posts.next_page_url">Older &rarr;</a>{% endif %}
	<div class="clear"></div>
</div>
